@model List<AcunMedyaMenu.Entities.Order>

<div class="col-md-8">
    <div class="card card-round">
        <div class="card-header">
            <div class="card-head-row card-tools-still-right">
                <div class="card-title">Sipariş Geçmişi </div>
                <div class="card-tools">
                    <div class="dropdown">
                       
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <!-- Projects table -->
                <table class="table align-items-center mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Müşteri</th>
                            <th scope="col" class="text-end">Tarih </th>
                            <th scope="col" class="text-end">Toplam Fiyat</th>
                            <th scope="col" class="text-end">Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                            {
                        <tr>
                            <th scope="row">
                                <button class="btn btn-icon btn-round btn-success btn-sm me-2">
                                    <i class="fas fa-user"></i>
                                </button>
                               @item.CustomerName
                            </th>
                            <td class="text-end">@item.OrderDate.ToString("dd-MM-yyyy")</td>
                            <td class="text-end">@item.TotalPrice ₺ </td>
                            <td class="text-end">
                                @if (item.OrderStatus == "İşlem Tamamlandı")
                                {
                                    <span class="badge badge-success">@item.OrderStatus</span>}
                                
                                @if (item.OrderStatus == "İşlem Beklemede")
                                {
                                    <span class="badge badge-warning">@item.OrderStatus</span>}
                                
                                @if (item.OrderStatus == "İşlem İptal Edildi")
                                {
                                    <span class="badge badge-danger">@item.OrderStatus</span>}
                                


                            </td>
                        </tr>
                             }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>